<Window x:Class="slider53.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slider53"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin = "20" Width="400">
            <Canvas Width="400" Height="50" Background="LightBlue">
                <Border CornerRadius="10" Background="White">
                    <TextBlock Canvas.Top="0" Canvas.Left="0" x:Name="HeightNumber" TextAlignment="Center" Padding="5">100</TextBlock>
                </Border>
            </Canvas>
            <!--Heigjt-->
                <Slider Minimum="50" Maximum="250" x:Name="HeightSlider" ValueChanged="HeightSlider_ValueChanged"></Slider>
            <!--Weigjt-->
                <TextBlock>100</TextBlock>
                <Slider></Slider>
            <!--BMI-->
                <TextBlock>0</TextBlock>
        </StackPanel>
    </Grid>
</Window>
